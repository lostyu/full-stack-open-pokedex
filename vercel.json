{
  "github": {
    "enabled": false,
    "silent": true
  },
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node"
    },
    {
      "src": "dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/dist/static/$1" 
    },
    {
      "src": "/(.*).(js|css|map|json|ico|png|jpg|svg)",
      "dest": "/dist/$1.$2" 
    },
    {
      "src": "/(.*)",
      "dest": "/app.js",  
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS", "HEAD"]
    }
  ]
}